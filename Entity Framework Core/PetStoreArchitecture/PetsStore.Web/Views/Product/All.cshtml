@model IEnumerable<PetStore.ViewModels.Product.ListAllProductsViewModel>

@{
    ViewData["Title"] = "All";
}
    <div class="text-center">
        <h1>All</h1>
    </div>

    

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="text-right jumbotron-fluid">
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })*@
            </td>
        </tr>
}
    </tbody>
</table>
<p class="text-center">
        <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
